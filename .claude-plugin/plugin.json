{
  "name": "guilde-workflows",
  "version": "1.0.0",
  "description": "Development environment automation with multi-agent workflows, TDD enforcement, and conductor pattern orchestration",
  "author": "guilde-lite",
  "repository": "https://github.com/pagerguild/guilde-lite",
  "license": "MIT",
  "claude_code_version": ">=1.0.0",

  "components": {
    "skills": [
      "mise-expert",
      "tdd-red-phase",
      "tdd-green-phase",
      "tdd-refactor-phase",
      "mermaid-generator",
      "c4-generator",
      "context-loader",
      "code-review-pipeline",
      "test-gen-workflow",
      "error-recovery",
      "release-researcher"
    ],
    "agents": [
      "context-explorer",
      "spec-builder",
      "docs-researcher",
      "codebase-analyzer",
      "backend-architect",
      "frontend-developer",
      "test-automator",
      "database-optimizer",
      "code-reviewer",
      "security-auditor",
      "architect-reviewer",
      "tdd-orchestrator"
    ],
    "commands": [
      "mise",
      "multi-agent",
      "tdd",
      "docs-sync",
      "review-all",
      "conductor-setup",
      "conductor-new-track",
      "conductor-implement",
      "conductor-status",
      "conductor-checkpoint",
      "conductor-sync-docs",
      "research-releases"
    ],
    "hooks": [
      "hookify.block-destructive",
      "hookify.warn-secrets",
      "hookify.require-confirmation",
      "hookify.tdd-tests-first",
      "hookify.tdd-auto-test",
      "hookify.doc-sync-reminder",
      "hookify.track-progress"
    ]
  },

  "capabilities": {
    "multi_agent_orchestration": {
      "description": "Coordinate multiple specialized agents for complex tasks",
      "patterns": ["supervisor-worker", "scatter-gather", "handoff"],
      "enabled": true
    },
    "tdd_enforcement": {
      "description": "Test-driven development with phase tracking",
      "phases": ["red", "green", "refactor"],
      "enabled": true
    },
    "conductor_pattern": {
      "description": "Multi-phase implementation orchestration",
      "tracks": true,
      "checkpoints": true,
      "enabled": true
    },
    "progressive_disclosure": {
      "description": "Three-tier skill loading for context efficiency",
      "tiers": ["metadata", "core", "references"],
      "enabled": true
    }
  },

  "settings": {
    "telemetry": {
      "enabled": true,
      "endpoint": "http://localhost:4318"
    },
    "quality_gates": {
      "test_coverage_minimum": 80,
      "mutation_score_minimum": 60,
      "lint_errors_allowed": 0
    },
    "agent_tiers": {
      "research": "haiku",
      "development": "sonnet",
      "review": "opus"
    }
  },

  "dependencies": {
    "runtime": {
      "mise": ">=2024.1.0",
      "task": ">=3.0.0"
    },
    "optional": {
      "docker": ">=20.0.0",
      "orbstack": ">=1.0.0"
    }
  },

  "activation": {
    "automatic": true,
    "triggers": [
      "workspaceContains:CLAUDE.md",
      "workspaceContains:conductor/",
      "workspaceContains:mise.toml"
    ]
  }
}
