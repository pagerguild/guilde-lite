# Stage 3: Terminal & Session Management
# Terminal emulator and multiplexer
# Install: brew bundle --file=brew/03-terminal.Brewfile

# Fonts (required for terminal)
tap "homebrew/cask-fonts"
cask "font-jetbrains-mono-nerd-font"
cask "font-fira-code-nerd-font"

# Terminal
cask "ghostty"              # GPU-accelerated terminal

# Session Management
brew "tmux"
brew "zellij"               # Modern tmux alternative (optional)
